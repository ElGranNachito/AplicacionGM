<UserControl x:Class="AppGM.UserControlCreacionRol_DatosRol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="White"
            Padding=" 10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox Style="{StaticResource TextoDescriptivo}" 
                     Text="{Binding modeloRol.Nombre, Mode=TwoWay}"
                     Tag="Nombre"
                     MaxLength="50"
                     TextAlignment="Center"
                     TextWrapping="Wrap"/>

            <TextBox Grid.Row="1"
                     Style="{StaticResource TextoDescriptivo}"
                     Text="{Binding modeloRol.Descripcion, Mode=TwoWay}"
                     Tag="Descripcion"
                     MaxLength="1000"
                     TextWrapping="Wrap"
                     Margin="0 10 0 0"/>
        </Grid>

    </Border>
</UserControl>
