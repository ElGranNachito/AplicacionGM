<UserControl x:Class="AppGM.UserControlCreacionRol_Personajes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="White"
            Padding="10">
            
        <StackPanel>

            <!-- boton agregar -->
            <Button Content="Agregar"/>

            <!-- Filtros -->
            <StackPanel 
                Margin="0 10"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                local:AñadirMargenAElementosProperty.Value="{x:Type CheckBox}"
                local:ParametroThicknessProperty.Parametro="0 5">

                <CheckBox Content="Servants"/>
                <CheckBox Content="Masters"/>
                <CheckBox Content="Invocaciones"/>
                <CheckBox Content="NPCs"/>

            </StackPanel>

        </StackPanel>

    </Border>

</UserControl>
