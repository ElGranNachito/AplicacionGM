<local:BaseUserControl x:TypeArguments="core:ViewModelPaginaPrincipal" 
                       x:Class="AppGM.UserControlPaginaInicio" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:local="clr-namespace:AppGM"
                       xmlns:core="clr-namespace:AppGM.Core;assembly=AppGM.Core"
                       mc:Ignorable="d" 
                       d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <!-- Imagen de fondo -->
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill"
                        ImageSource="../../Media/Imagenes/UiFondoMenuPrincipal.png"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Contenedor de la lista de roles y boton de agregar rol -->

        <StackPanel Grid.Column="0"
                    Margin="20 0 0 0"
                    HorizontalAlignment="Center">

            <Button Content="+Agregar" 
                    Margin=" 0 50 0 10"
                    HorizontalAlignment="Center"
                    Width="100"/>

            <Border HorizontalAlignment="Center"
                    Width="300"
                    Height="300">

                <local:UserControlListaRolItems 
                    DataContext="{Binding Roles}"
                    d:DataContext="{x:Static core:DesingModelListaRoles.listaRoles}"/>

            </Border>

        </StackPanel>

        <!-- Globo -->

        <local:UserControlGlobo Grid.Column="1"
                                Margin="20 75 50 0"
                                HorizontalAlignment="Left"
                                DataContext="{Binding GloboInfoRol}"/>

        <!-- Contenedor botones reglas, informacion e items -->

        <StackPanel Grid.Column="2"
                    Margin="0 0 20 0"
                    HorizontalAlignment="Center">

            <Button Content="Reglas" 
                    Margin=" 0 50 0 20"
                    HorizontalAlignment="Center"
                    Width="100"/>
            <Button Content="Informacion" 
                    Margin=" 0 10 0 20"
                    HorizontalAlignment="Center"
                    Width="100"/>
            <Button Content="Items" 
                    Margin=" 0 10 0 20"
                    HorizontalAlignment="Center"
                    Width="100"/>

        </StackPanel>


    </Grid>
</local:BaseUserControl>
