<UserControl x:Class="AppGM.UserControlGlobo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Visibility="{Binding GloboVisible, Converter={local:BooleanToVisibilityConverter}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="{Binding ColorFondo, Converter={local:StringToSolidColorBrushConverter}}" 
                CornerRadius="25"
                Padding="8"
                MaxWidth="400"
                MinWidth="200">

            <ContentControl Content="{Binding ViewModelContenido, Converter={local:ViewModelToContenidoConverter}}"/>
        </Border>

        <Path Grid.Row="1" 
              Visibility="{Binding ColaGloboVisible, Converter={local:BooleanToVisibilityConverter}}"
              Margin="25 -1 0 0"
              Data="M0,0 15,20 30,0"
              Fill="{Binding ColorFondo, Converter={local:StringToSolidColorBrushConverter}}"
              Stroke="Transparent"/>
            
    </Grid>
</UserControl>
