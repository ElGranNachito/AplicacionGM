<UserControl x:Class="AppGM.UserControlMultiSelectComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--ViewModel: ViewModelMultiselectComboBox-->

    <ComboBox ItemsSource="{Binding Items.Elementos}">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <CheckBox 
                    IsChecked="{Binding EstaSeleccionado}"
                    Style="{StaticResource CheckBoxMultiselectComboBox}"/>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>