<UserControl x:Class="AppGM.UserControlComboBoxConDescripcion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- ViewModel: ViewModelComboBox -->

    <!-- Combo box acompañada de una descripcion -->

    <Grid>
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Descripcion -->
        <TextBlock
            x:Name="TextBox_Descripcion"
            Margin="0 0 5 0"
            Text="{Binding Descripcion}"
            Style="{StaticResource TextBlockBase}"
        />
    
        <!-- ComboBox -->
        <ComboBox
            Grid.Column="1"
            Margin="10 0 0 0"
            x:Name="ComboBox"
            ItemsSource="{Binding ValoresPosibles}"
            SelectedValue="{Binding ValorSeleccionado}">

            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <local:UserControlItemComboBox/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>

</UserControl>
