<UserControl x:Class="AppGM.UserControlCasillaTablero"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    
    <Grid Name="Gridsito"
          MouseEnter="OnMouseEnter"
          MouseLeave="OnMouseLeave">

        <!-- UserControl que hace uso del ViewModelMapa -->
        <Border Background="{Binding ColorFondoCasilla, Converter={local:StringToSolidColorBrushConverter}}"
                BorderBrush="{Binding ColorBordeCasilla, Converter={local:StringToSolidColorBrushConverter}}"
                BorderThickness="1"
                Height="50"
                Width="50">

        

        </Border>

    </Grid>
</UserControl>
