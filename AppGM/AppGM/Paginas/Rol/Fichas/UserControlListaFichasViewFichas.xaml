<UserControl x:Class="AppGM.UserControlListaFichasViewFichas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">

    <!-- Este control muestra una lista de personajes y permite visualizar
         sus respectivas fichas -->
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MaxWidth="270"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista de las fichas -->
        <local:UserControlListaFichas 
            DataContext="{Binding ViewModelListaFichas}"/>

        <!-- Vista de la fichas actualmente seleccionada -->
        <local:UserControlVistaFicha Grid.Column="1" 
                                     DataContext="{Binding FichaSeleccionada}"/>
    </Grid>
</UserControl>
