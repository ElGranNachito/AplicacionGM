<UserControl x:Class="AppGM.UserControlListaFichasViewFichas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" 
                              MaxWidth="270"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <local:UserControlListaFichas DataContext="{Binding ViewModelListaFichas}"/>

        <local:UserControlVistaFicha Grid.Column="1" DataContext="{Binding FichaSeleccionada}"/>
    </Grid>
</UserControl>
