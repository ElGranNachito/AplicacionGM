<UserControl x:Class="AppGM.UserControlFichaItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="250">

    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">

            <Border x:Name="contenido"
                    BorderBrush="Aqua" 
                    Background="{Binding ColorFondo, Converter={local:StringToSolidColorBrushConverter}}"
                    BorderThickness="{Binding AnchoBorde, Converter={local:IntToThicknessConverter}}">

            <Grid Margin="0 0 0 5">
            
                <StackPanel>

                    <TextBlock>
                        <Run Text="Nombre: "/>
                        <Run Text="{Binding ModeloPersonaje.Nombre}"/>
                    </TextBlock>

                    <TextBlock
                    Visibility="{Binding EsServant, Converter={local:BooleanToVisibilityConverterColapsar}}">
                        <Run Text="Clase: "/>
                        <Run Text="{Binding ModeloPersonaje.mEClaseDeServant}"/>
                    </TextBlock>

                    <TextBlock
                        Visibility="{Binding EsMaster, Converter={local:BooleanToVisibilityConverterColapsar}}">
                        <Run Text="Clase de su servant: "/>
                        <Run Text="{Binding ModeloPersonaje.EClaseDeSuServant}"/>
                    </TextBlock>

                </StackPanel>

                <Grid.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding ComandoMouseClick}"/>
                </Grid.InputBindings>

            </Grid>

            </Border>

            <ControlTemplate.Triggers>
                <MultiTrigger>

                    <MultiTrigger.Conditions>
                        <Condition SourceName="contenido" Property="IsMouseOver" Value="True"/>
                        <Condition SourceName="contenido" Property="BorderThickness" Value="0"/>
                    </MultiTrigger.Conditions>

                    <MultiTrigger.Setters>
                        <Setter TargetName="contenido" Property="Background" Value="LightGray"/>
                    </MultiTrigger.Setters>

                </MultiTrigger>
            </ControlTemplate.Triggers>

        </ControlTemplate>
    </UserControl.Template>

</UserControl>
