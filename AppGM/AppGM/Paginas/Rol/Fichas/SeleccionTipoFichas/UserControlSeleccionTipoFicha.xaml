<UserControl x:Class="AppGM.UserControlSeleccionTipoFicha"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <!-- Control para la seleccion de un tipo de fichas, es decir
    fichas pertenecientes a cierto tipo de personaje-->
    <UserControl.Template>
        <ControlTemplate TargetType="{x:Type UserControl}">
            <Grid Background="Beige">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Contenido a mostrar en el bloque superior del control -->
                <ContentPresenter Grid.Row="0"/>

                <!-- Informacion de este tipo de fichas -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Un poco de info general"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Info info"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>

</UserControl>
